<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_real_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title_home_title"
        layout="@menu/home_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"></include>

    <!--    滑动视图-->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager.widget.ViewPager>

    <!--底部四大金刚-->
    <LinearLayout
        android:id="@+id/llay_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/top_back"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/lay_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgBtn_table_update"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:paddingTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_update_normal" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:paddingLeft="7dp"
                android:text="更新"
                android:textSize="25px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:scaleType="center">

            <ImageButton
                android:id="@+id/imgBtn_table_phone"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:paddingTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_phone_normal" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:paddingLeft="7dp"
                android:text="手机"
                android:textSize="25px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_soc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgBtn_table_soc"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:paddingTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_soc_normal" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:paddingLeft="7dp"
                android:text="处理器"
                android:textSize="25px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgBtn_table_recommend"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:paddingTop="0dp"
                android:scaleType="fitXY"
                android:src="@drawable/tab_recommend_normal" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:paddingLeft="7dp"
                android:text="推荐"
                android:textSize="25px" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

